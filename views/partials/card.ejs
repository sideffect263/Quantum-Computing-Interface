<div class="bg-gray-800 rounded-lg shadow-lg border border-gray-700 overflow-hidden">
    <div class="px-6 py-4">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold flex items-center">
                <i class="<%= icon %> mr-2 text-<%= iconColor %>-500"></i>
                <%= title %>
            </h2>
            <% if (locals.badge) { %>
            <span class="px-2 py-1 text-xs rounded-full bg-<%= badge.color %>-500/20 text-<%= badge.color %>-400">
                <%= badge.text %>
            </span>
            <% } %>
        </div>
        <%- content %>
    </div>
</div>